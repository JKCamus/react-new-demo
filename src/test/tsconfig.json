{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@asset/*": ["asset/*"],
      "@component/*": ["component/*"],
      "@constant/*": ["constant/*"],
      "@data/*": ["data/*"],
      "@hook/*": ["hook/*"],
      "@lib/*": ["lib/*"],
      "@page/*": ["page/*"],
      "@index/*": ["page/index/*"],
      "@link/*": ["page/link/*"],
      "@meeting/*": ["page/meeting/*"],
      "@type/*": ["type/*"],
      "@util/*": ["util/*"],
      "@viewModel": ["page/index/model/view-model/*"],
      "@businessModel": ["page/index/model/business-model/*"]
    },
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": ["src/**/*", "global.d.ts", "trackers/builder.code.global.d.ts"],
  "exclude": ["srcOld/**/*"]
}
